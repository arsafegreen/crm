[mysqld]
# Increase buffer pool to keep decoded projections resident in memory.
innodb_buffer_pool_size = 2G
innodb_buffer_pool_instances = 2
innodb_log_file_size = 512M
innodb_flush_method = O_DIRECT
innodb_flush_log_at_trx_commit = 2

# Statement cache reduces parse overhead when decoding functions are used.
query_cache_type = 0
query_cache_size = 0
performance_schema = ON
max_prepared_stmt_count = 1048576

# Connection handling
max_connections = 400
thread_cache_size = 128

# Slow query insight (focus on decode-heavy statements).
slow_query_log = ON
slow_query_log_file = /var/log/mysql/slow-crm.log
long_query_time = 0.5
log_queries_not_using_indexes = ON

# Replication-safe binlog format.
binlog_format = ROW
sync_binlog = 1
