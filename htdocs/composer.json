{
    "name": "empresa/marketing-suite",
    "description": "Suite de marketing para certificados digitais",
    "type": "project",
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6",
        "nikic/fast-route": "^1.3",
        "symfony/http-foundation": "^7.1",
        "monolog/monolog": "^3.5",
        "phpoffice/phpspreadsheet": "^2.2",
        "predis/predis": "^3.3",
        "dompdf/dompdf": "2.0",
        "erusev/parsedown": "1.7"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.1",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-install-cmd": [
            "php bootstrap/post_install.php"
        ],
        "post-update-cmd": [
            "php bootstrap/post_install.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
